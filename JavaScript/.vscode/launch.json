{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "调试当前文件",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${file}",

            "outputCapture": "std"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "调试index.js",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/index.js",
            "console": "integratedTerminal",
            "outputCapture": "std"
        }
    ]
}